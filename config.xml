<?xml version='1.0' encoding='utf-8'?>
<widget id="org.fleetpond" version="1.2.2" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Fleet Pond</name>
    <description>
        Fleet Pond is the largest freshwater lake in Hampshire. The nature reserve has 141 acres (57ha) of varied habitats including heathland, woodland, reedbed and marsh, and is home for many species of birds, butterflies, dragonflies and wild flowers.
        This mobile application makes learning about and exploring Fleet pond fun.
    </description>
    <author email="chairman@fleetpond.org.uk" href="http://fleetpond.org.uk/">
        Fleet Pond
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        <icon density="ldpi" src="res/icon/android/icon-36-ldpi.png" />
        <icon density="mdpi" src="res/icon/android/icon-48-mdpi.png" />
        <icon density="hdpi" src="res/icon/android/icon-72-hdpi.png" />
        <icon density="xhdpi" src="res/icon/android/icon-96-xhdpi.png" />
        <icon density="xxhdpi" src="res/icon/android/icon-144-xxhdpi.png" />
        <icon density="xxxhdpi" src="res/icon/android/icon-192-xxxhdpi.png" />
        <preference name="AndroidWindowSplashScreenAnimatedIcon" value="res/icon/icon.png" />
        <preference name="AutoHideSplashScreen" value="true" />
        <preference name="SplashScreenDelay" value="10000" />
    </platform>
    <platform name="browser">
        <preference name="SplashScreen" value="/images/browser/splashscreen.jpg" />
        <preference name="SplashScreenBackgroundColor" value="black" />
        <preference name="ShowSplashScreen" value="false" />
        <preference name="SplashScreenWidth" value="2765" />
        <preference name="SplashScreenHeight" value="2746" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
        <icon height="180" src="res/icon/ios/icon-60@3x.png" width="180" />
        <icon height="60" src="res/icon/ios/icon-60.png" width="60" />
        <icon height="120" src="res/icon/ios/icon-60@2x.png" width="120" />
        <icon height="76" src="res/icon/ios/icon-76.png" width="76" />
        <icon height="152" src="res/icon/ios/icon-76@2x.png" width="152" />
        <icon height="40" src="res/icon/ios/icon-40.png" width="40" />
        <icon height="80" src="res/icon/ios/icon-40@2x.png" width="80" />
        <icon height="120" src="res/icon/ios/icon-40@3x.png" width="120" />
        <icon height="57" src="res/icon/ios/icon-57.png" width="57" />
        <icon height="114" src="res/icon/ios/icon-57@2x.png" width="114" />
        <icon height="72" src="res/icon/ios/icon-72.png" width="72" />
        <icon height="144" src="res/icon/ios/icon-72@2x.png" width="144" />
        <icon height="167" src="res/icon/ios/icon-83.5@2x.png" width="167" />
        <icon height="29" src="res/icon/ios/icon-small.png" width="29" />
        <icon height="58" src="res/icon/ios/icon-small@2x.png" width="58" />
        <icon height="87" src="res/icon/ios/icon-small@3x.png" width="87" />
        <icon height="50" src="res/icon/ios/icon-50.png" width="50" />
        <icon height="100" src="res/icon/ios/icon-50@2x.png" width="100" />
        <icon height="167" src="res/icon/ios/icon-83.5@2x.png" width="167" />
        <icon height="1024" src="res/icon/ios/icon-1024.png" width="1024" />
        <preference name="AutoHideSplashScreen" value="false" />
        <preference name="SplashScreenDelay" value="5000" />
        <splash height="1334" src="res/screen/ios/screen-667h-portrait.png" width="750" />
        <splash height="1242" src="res/screen/ios/screen-736h-landscape.png" width="2208" />
        <splash height="2208" src="res/screen/ios/screen-736h-portrait.png" width="1242" />
        <splash height="1125" src="res/screen/ios/screen-2436h-landscape.png" width="2436" />
        <splash height="2436" src="res/screen/ios/screen-2436h-portrait.png" width="1125" />
        <splash height="1536" src="res/screen/ios/screen-ipad-landscape-2x.png" width="2048" />
        <splash height="768" src="res/screen/ios/screen-ipad-landscape.png" width="1024" />
        <splash height="2048" src="res/screen/ios/screen-ipad-portrait-2x.png" width="1536" />
        <splash height="1024" src="res/screen/ios/screen-ipad-portrait.png" width="768" />
        <splash height="640" src="res/screen/ios/screen-iphone-landscape-2x.png" width="960" />
        <splash height="320" src="res/screen/ios/screen-iphone-landscape.png" width="480" />
        <splash height="960" src="res/screen/ios/screen-iphone-portrait-2x.png" width="640" />
        <splash height="1136" src="res/screen/ios/screen-iphone-portrait-568h-2x.png" width="640" />
        <splash height="480" src="res/screen/ios/screen-iphone-portrait.png" width="320" />
        <edit-config file="*-Info.plist" mode="merge" target="NSLocationAlwaysUsageDescription">
            <string>Your current location will be displayed on the map and used to show your proximity to the points of interest and marked trails available at Fleet Pond.</string>
        </edit-config>
        <edit-config file="*-Info.plist" mode="merge" target="NSLocationUsageDescription">
            <string>Your current location will be displayed on the map and used to show your proximity to the points of interest and marked trails available at Fleet Pond.</string>
        </edit-config>
        <edit-config file="*-Info.plist" mode="merge" target="NSLocationWhenInUseUsageDescription">
            <string>Your current location will be displayed on the map and used to show your proximity to the points of interest and marked trails available at Fleet Pond.</string>
        </edit-config>
    </platform>
    <plugin name="cordova-plugin-splashscreen" spec="^5.0.2" />
    <plugin name="cordova-plugin-geolocation" spec="^4.0.1" />
    <engine name="android" spec="^7.1.0" />
    <engine name="browser" spec="^5.0.3" />
    <engine name="ios" spec="^4.5.4" />
</widget>
